---
const { post } = Astro.props;
const { id, data } = post;
---

<a
    href={`/blog/${id}`}
    class="block rounded-xl overflow-hidden border hover:shadow-lg transition group"
>
    {
        data.cover && (
            <img
                src={data.cover}
                alt={data.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition"
            />
        )
    }

    <div class="p-5">
        <span class="text-sm text-gray-500">{data.category}</span>

        <h2
            class="text-xl font-semibold mt-1 group-hover:text-blue-600 transition"
        >
            {data.title}
        </h2>

        <p class="text-gray-600 mt-2 line-clamp-3">
            {data.description}
        </p>

        <div
            class="mt-4 flex items-center justify-between text-sm text-gray-500"
        >
            <span>{data.author}</span>
            <span>{data.date.toLocaleDateString()}</span>
        </div>
    </div>
</a>
