---
import {
    Code,
    Laptop,
    Boxes,
    Check,
    Zap,
    Rocket,
    MessageCircle,
    ShieldCheck,
} from "lucide-astro";

interface Props {
    servicios: {
        nombre: string;
        descripcion: string;
        imagen: string;
    }[];
}

const {
    servicios = [
        { nombre: "Landing Page", descripcion: "", imagen: "" },
        { nombre: "Web Corporativa", descripcion: "", imagen: "" },
        { nombre: "Software a Medida", descripcion: "", imagen: "" },
    ],
} = Astro.props;
---

<section
    id="planes-precios"
    class="bg-white py-24"
    aria-labelledby="planes-title"
>
    <div class="max-w-6xl mx-auto px-6">
        <header class="text-center mb-20">
            <h2 id="planes-title" class="text-4xl font-extrabold text-gray-900">
                Planes y precios de nuestros servicios
            </h2>

            <p class="text-gray-600 mt-4 max-w-2xl mx-auto">
                Estos son nuestros servicios más contratados. Todos incluyen
                optimización SEO, alto rendimiento y soporte profesional.
            </p>
        </header>

        <div class="grid gap-10 md:grid-cols-3">
            <!-- PLAN BÁSICO -->
            <article
                class="group rounded-2xl p-8 border border-gray-200 bg-white shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300"
            >
                <Laptop
                    class="w-12 h-12 text-blue-600 mb-6 group-hover:scale-110 group-hover:rotate-3 transition"
                />

                <span
                    class="inline-block mb-4 text-sm bg-blue-50 text-blue-600 px-3 py-1 rounded-full"
                >
                    Ideal para emprendedores
                </span>

                <h3 class="text-2xl font-bold mb-4 text-gray-900">
                    {servicios[0].nombre}
                </h3>

                <p class="text-4xl font-extrabold mb-6 text-gray-900">
                    $199 <span class="text-base font-normal text-gray-500"
                        >USD</span
                    >
                </p>

                <ul class="space-y-3 text-gray-600 mb-8">
                    <li class="flex items-center gap-2">
                        <Check class="w-5 h-5 text-green-500" /> Diseño moderno y
                        responsive
                    </li>
                    <li class="flex items-center gap-2">
                        <Zap class="w-5 h-5 text-green-500" /> SEO básico optimizado
                    </li>
                    <li class="flex items-center gap-2">
                        <Rocket class="w-5 h-5 text-green-500" /> Velocidad optimizada
                    </li>
                    <li class="flex items-center gap-2">
                        <MessageCircle class="w-5 h-5 text-green-500" /> Formulario
                        de contacto
                    </li>
                </ul>

                <a
                    href="#contacto"
                    class="block text-center rounded-xl py-3 font-semibold bg-blue-600 text-white hover:bg-blue-700 transition"
                >
                    Comenzar ahora
                </a>
            </article>

            <!-- PLAN POPULAR -->
            <article
                class="group relative rounded-2xl p-8 border-2 border-blue-600 bg-white shadow-lg hover:shadow-2xl hover:-translate-y-3 transition-all duration-300"
            >
                <span
                    class="absolute -top-4 left-1/2 -translate-x-1/2 bg-blue-600 text-white px-4 py-1 text-sm rounded-full"
                >
                    Más vendido
                </span>

                <Code
                    class="w-12 h-12 text-blue-600 mb-6 group-hover:scale-110 group-hover:rotate-3 transition"
                />

                <h3 class="text-2xl font-bold mb-4 text-gray-900">
                    Web Corporativa
                </h3>

                <p class="text-4xl font-extrabold mb-6 text-gray-900">
                    $499 <span class="text-base font-normal text-gray-500"
                        >USD</span
                    >
                </p>

                <ul class="space-y-3 text-gray-600 mb-8">
                    <li class="flex items-center gap-2">
                        <Check class="w-5 h-5 text-green-500" /> Diseño moderno y
                        responsive
                    </li>
                    <li class="flex items-center gap-2">
                        <Zap class="w-5 h-5 text-green-500" /> SEO avanzado
                    </li>
                    <li class="flex items-center gap-2">
                        <Rocket class="w-5 h-5 text-green-500" /> Velocidad optimizada
                    </li>
                    <li class="flex items-center gap-2">
                        <MessageCircle class="w-5 h-5 text-green-500" /> Formulario
                        de contacto
                    </li>
                </ul>

                <a
                    href="#contacto"
                    class="block text-center rounded-xl py-3 font-semibold bg-blue-600 text-white hover:bg-blue-700 transition"
                >
                    Comenzar ahora
                </a>
            </article>

            <!-- PLAN PREMIUM -->
            <article
                class="group rounded-2xl p-8 border border-gray-200 bg-white shadow-sm hover:shadow-xl hover:-translate-y-2 transition-all duration-300"
            >
                <Boxes
                    class="w-12 h-12 text-blue-600 mb-6 group-hover:scale-110 group-hover:rotate-3 transition"
                />

                <span
                    class="inline-block mb-4 text-sm bg-green-50 text-green-600 px-3 py-1 rounded-full"
                >
                    Empresas
                </span>

                <h3 class="text-2xl font-bold mb-4 text-gray-900">
                    Software a Medida
                </h3>

                <p class="text-4xl font-extrabold mb-6 text-gray-900">
                    Desde $999
                </p>

                <ul class="space-y-3 text-gray-600 mb-8">
                    <li class="flex items-center gap-2">
                        <Code class="w-5 h-5 text-green-500" /> Desarrollo personalizado
                    </li>
                    <li class="flex items-center gap-2">
                        <Zap class="w-5 h-5 text-green-500" /> Automatizaciones
                    </li>
                    <li class="flex items-center gap-2">
                        <Rocket class="w-5 h-5 text-green-500" /> Escalabilidad
                    </li>
                    <li class="flex items-center gap-2">
                        <ShieldCheck class="w-5 h-5 text-green-500" /> Soporte prioritario
                    </li>
                </ul>

                <a
                    href="/servicios"
                    class="block text-center rounded-xl py-3 font-semibold bg-gray-900 text-white hover:bg-gray-800 transition"
                >
                    Ver todos los servicios
                </a>
            </article>
        </div>
    </div>
</section>
