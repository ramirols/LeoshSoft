---
import Layout from "./Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer.astro";
import { AstroSEO } from "astro-seo-plugin";

const {
    lang = "es",
    title = "LeoryenSoft | Desarrollo Web Profesional",
    description = "Desarrollo de páginas web modernas, rápidas y optimizadas para negocios.",
    image = "/og-default.jpg",
    type = "website",
} = Astro.props;

const canonical = Astro.url.href;
---

<Layout lang={lang}>
    <AstroSEO
        title={title}
        description={description}
        canonical={canonical}
        openGraph={{
            type,
            locale: lang === "es" ? "es_ES" : "en_US",
            url: canonical,
            siteName: "LeoryenSoft",
            images: [
                {
                    url: `https://leoryensoft.vercel.app${image}`,
                    width: 1200,
                    height: 630,
                    alt: title,
                },
            ],
        }}
        twitter={{
            card: "summary_large_image",
            site: "@leoryensoft",
        }}
        jsonLd={{
            "@context": "https://schema.org",
            "@type": type === "article" ? "Article" : "Organization",
            name: title,
            url: canonical,
        }}
    />

    <Header client:load />

    <main class="min-h-screen bg-white text-gray-900 font-inter">
        <slot />
    </main>

    <Footer />
</Layout>
