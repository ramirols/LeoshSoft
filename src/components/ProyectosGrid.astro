---
import { getCollection } from "astro:content";
import { ArrowUpRight } from "lucide-astro";

const projects = (await getCollection("proyectos"))
  .filter((p) => p.data.featured)
  .slice(0, 3);
---

<section id="proyectos" class="bg-gray-50 py-24">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between mb-16">
      <div>
        <h2 class="text-4xl font-extrabold text-primary">Proyectos</h2>
        <p class="text-gray-600 mt-4 text-lg">
          Algunos de nuestros proyectos m√°s influyentes
        </p>
      </div>

      <a
        href="/proyectos"
        class="hidden md:inline-flex items-center gap-2 text-primary font-semibold hover:text-accent transition"
      >
        Ver todos
        <ArrowUpRight class="w-5 h-5" />
      </a>
    </div>

    <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition overflow-hidden group">
            <a href={`/proyectos/${project.id}`}>
              <img
                src={project.data.cover}
                alt={project.data.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition duration-500"
              />
            </a>

            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-primary">
                {project.data.title}
              </h3>

              <p class="text-gray-600 text-sm mb-4">
                {project.data.description}
              </p>

              <p class="text-secondary font-semibold mb-6">
                {project.data.result}
              </p>

              <a
                href={`/proyectos/${project.id}`}
                class="inline-flex items-center gap-2 text-primary font-semibold hover:text-accent transition"
              >
                Ver proyecto
                <ArrowUpRight class="w-5 h-5" />
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
