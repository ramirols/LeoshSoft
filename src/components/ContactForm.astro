---
const {
    title = "Contáctame",
    subtitle = "Envíame un mensaje y te responderé pronto.",
} = Astro.props;
---

<section class="max-w-3xl mx-auto px-6 py-16">
    <h2 class="text-3xl font-bold text-center mb-3">{title}</h2>
    <p class="text-center text-gray-600 mb-10">{subtitle}</p>

    <form
        action="https://formspree.io/f/your-form-id"
        method="POST"
        class="space-y-6 bg-white shadow-xl p-8 rounded-2xl border"
    >
        <!-- Nombre -->
        <div>
            <label class="block text-sm font-medium mb-1">Nombre</label>
            <input
                type="text"
                name="name"
                required
                class="w-full border rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
        </div>

        <!-- Email -->
        <div>
            <label class="block text-sm font-medium mb-1"
                >Correo electrónico</label
            >
            <input
                type="email"
                name="email"
                required
                class="w-full border rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
        </div>

        <!-- Mensaje -->
        <div>
            <label class="block text-sm font-medium mb-1">Mensaje</label>
            <textarea
                name="message"
                required
                rows="5"
                class="w-full border rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"
            ></textarea>
        </div>

        <!-- Botón -->
        <button
            type="submit"
            class="w-full bg-blue-600 text-white py-3 rounded-xl font-semibold hover:bg-blue-700 transition"
        >
            Enviar mensaje
        </button>
    </form>
</section>
